PREPARE_TARGETS += prepare.libui
PREPARE_URL_libui = https://github.com/FoxInTango/libui.git
ifdef REMOTE_ALL_IN_ONE
PREPARE_URL_libui = wf@allinone.io:alpine/libui.git
endif
PREPARE_DIR_libui = $(DEPENDS_LIBRARY_PATH)/$(basename $(notdir $(PREPARE_URL_libui)))
prepare.libui:
	-git clone $(PREPARE_URL_libui) $(PREPARE_DIR_libui)
	-echo "SUPER_MAKE_DIR=${MAKE_FILE_DIR}"                >> $(PREPARE_DIR_libui)/.make/super
	-echo "SUPER_MAKE_CONFIG_DIR=${MAKE_CONFIG_DIR}"       >> $(PREPARE_DIR_libui)/.make/super
	-cd $(PREPARE_DIR_libui) && make prepare
	-rm $(PREPARE_DIR_libui)/.make/super
